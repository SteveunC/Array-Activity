#include <iostream>
#include <string>
#include <stdlib.h>

using namespace std;

int grade[100], i = 0;

void gradearray(){
    cout << "Input student grade: ";
    cin >> grade[i];

}
int main(){
    int sum;
    double avg;
    char n;
    while (n != 'n' && n != 'N'){
        n = '0';
        gradearray();

        while (n != 'y' && n != 'Y'){
            cout << "Input another grade?[Y/N] ";
            cin >> n;
            if (n == 'n' || n == 'N'){
                break;
            }
        }
        i++;
    }

    for (int x = 0; x < i; x++){
        sum += grade[x];
    }
    avg = sum/i;

    cout << "Summary of Grade Report" << endl;
    cout << "List of numbers inputted: " << sizeof(grade[i]) << endl;
    cout << "Sum: " << sum << endl;
    cout << "Average: " << avg << endl;

    return 0;
}
